<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.geniusnine.android.clanguage.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/imag">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="Introduction"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:onClick="Introduction"

            />
        <Button
            android:text="Tutorials"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:onClick="Tutorials"

            />
    <Button
        android:text="Control Statements"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:background="@color/colorAccent"
        android:onClick="controstatements"

        />

    <Button
        android:text="Strings,Math,Structure Union"
        android:layout_width="159dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@color/colorAccent"
        android:onClick="stringMath"
        />

    <Button
        android:text="FileHandling,Preprocessor"
        android:layout_width="159dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@color/colorAccent"
        android:onClick="file"
        />

    <Button
        android:text="Top 'C' Programs"
        android:layout_width="159dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@color/colorAccent"
        android:onClick="Programs"
        />

    <Button
        android:text="Functions,arrays And Pointers"
        android:layout_width="159dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@color/colorAccent"
        android:onClick="FunctionsarraysAndPointers"
        />
    </LinearLayout>
</ScrollView>
</RelativeLayout>
